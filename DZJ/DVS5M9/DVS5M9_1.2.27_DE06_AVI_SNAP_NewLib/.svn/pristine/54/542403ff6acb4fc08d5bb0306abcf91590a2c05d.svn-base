void appPathSlashReplace(UINT8* pathString)
{
	UINT strIndex = 0;
	while(pathString[strIndex] != '\0')
	{
		if(pathString[strIndex] == '/')
		{
			pathString[strIndex] = '\\';
		}
		else if(pathString[strIndex] == '\\')
		{
			pathString[strIndex] = '/';
		}
		strIndex ++;
	}
}

